{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Port Application Regulation Ruleset",
  "type": "object",
  "required": ["ruleset_version", "rules"],
  "properties": {
    "ruleset_version": {
      "type": "string",
      "description": "Semantic version for the ruleset definition.",
      "examples": ["1.3"]
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "severity", "expected_fields"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Stable rule identifier.",
            "examples": ["DOC.MISSING_FIELDS", "DOC.EXPIRY_DATE"]
          },
          "severity": {
            "type": "string",
            "enum": ["info", "warning", "critical"],
            "description": "Impact level when the rule fails."
          },
          "expected_fields": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            },
            "description": "Fields required by the rule for validation."
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {"type": "string"},
        "effective_date": {"type": "string", "format": "date"}
      }
    }
  }
}
