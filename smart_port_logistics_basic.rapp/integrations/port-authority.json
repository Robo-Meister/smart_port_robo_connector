{
  "type": "integration",
  "name": "Port Authority API",
  "scope": "port",
  "support_url": "https://support.portauthority.example.com",
  "auth_url": "https://api.portauthority.example.com/oauth",
  "requirements": {
    "client_id": {
      "label": "Client ID",
      "required": true
    },
    "client_secret": {
      "label": "Client Secret",
      "required": true,
      "type": "password"
    },
    "base_url": {
      "label": "Base URL",
      "required": true
    }
  },
  "hooks": [
    {
      "name": "Submit Slot Booking",
      "code": "submit_slot_booking",
      "method": "POST",
      "hook": "{{base_url}}/slots",
      "test_url": "{{base_url}}/slots/test",
      "mapper": "json",
      "actions": [
        {
          "type": "http"
        }
      ]
    }
  ]
}
