{
  "type": "workflow",
  "name": "Customs Document Validation",
  "steps": [
    {
      "name": "Validate uploaded customs and clearance files",
      "action": "ingest"
    },
    {
      "name": "Evaluate regulations ruleset",
      "action": "rule_evaluation",
      "ruleset_version": "1.3",
      "outputs": [
        "validation/missing-fields.json",
        "validation/expiry.json",
        "validation/hazmat-mismatch.json"
      ]
    },
    {
      "name": "Attach evidence artifacts",
      "action": "evidence_attachment",
      "evidence_types": [
        "customs_declaration",
        "clearance_certificate",
        "carrier_manifest",
        "inspection_photos"
      ]
    },
    {
      "name": "Handle override request",
      "action": "override_review",
      "override_policy": {
        "authorized_roles": [
          "Compliance Officer",
          "Port Authority Supervisor"
        ],
        "duration_hours": 24,
        "reason_required": true,
        "log_destination": "audit/validation-trace"
      }
    },
    {
      "name": "Re-validate after corrections",
      "action": "revalidation",
      "trigger": "evidence_or_document_updates"
    },
    {
      "name": "Mark missing or invalid",
      "action": "status_update"
    },
    {
      "name": "Suggest corrective action",
      "action": "recommendation"
    }
  ]
}
